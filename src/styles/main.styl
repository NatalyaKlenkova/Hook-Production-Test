@font-face
    font-family: 'Inter';
    src: local('Inter Regular'), local('Inter-Regular'),
        url('../fonts/Inter-Regular.woff2') format('woff2'),
        url('../fonts/Inter-Regular.woff') format('woff');
    font-weight: normal;
    font-style: normal;
    font-display: swap

@font-face
    font-family: 'Inter';
    src: local('Inter Bold'), local('Inter-Bold'),
        url('../fonts/Inter-Bold.woff2') format('woff2'),
        url('../fonts/Inter-Bold.woff') format('woff');
    font-weight: bold;
    font-style: normal;
    font-display: swap


@font-face
    font-family: 'Inter';
    src: local('Inter Medium'), local('Inter-Medium'),
        url('../fonts/Inter-Medium.woff2') format('woff2'),
        url('../fonts/Inter-Medium.woff') format('woff');
    font-weight: 500;
    font-style: normal;
    font-display: swap

$white = #fff
$black = #000
$gray = #92929D
$bg-color = #EEE7E1
$bg-color-light = #FAF8F6
$text-color = #364670
$accent-mustard = #A68144
$accent-mustard-dark = #948171
$accent-red = #911016

:root
    --c: 1440px
    --p: 90px
    --h1: 62px
    --h2: 23px
    --h3: 20px
    --text-18: 18px
    --text-16: 16px
    --text-14: 14px

tr(){
	transition all 0.3s ease-in-out
}

html
	box-sizing border-box
	overflow-x hidden

*,
*::after,
*::before
	box-sizing inherit

body
    min-width 320px
    background-color $bg-color
    font-family 'Inter', sans-serif
    font-weight 500
    color $text-color
    overflow-x hidden

// Global

.container
    width 100%
    max-width calc(var(--c) - var(--p)*2)
    padding 0 var(--p)
    margin 0 auto

.list-reset 
    list-style none
    padding 0
    margin 0

.btn-reset
    background-color transparent
    padding 0
    border none
        
a
    text-decoration none
    color inherit

img
    max-width 100%

.visually-hidden 
    position absolute
    width 1px
    height 1px
    margin -1px
    border 0
    padding 0
    clip rect(0 0 0 0)
    overflow hidden

.stop-scroll {
    overflow-y: hidden;
    overscroll-behavior: contain;
}

// Header
.header
    padding 36px 0
    &__container
        display: flex
        justify-content: space-between
        align-items: center
    &__logo
        max-width 349px
    &__login
        position relative
        display: flex
        align-items: center
        font-size: var(--text-16);
        line-height: 121%;
        letter-spacing: 0.2px;
        background-color $white
        padding 12px 16px
        border-radius:  16px
        cursor pointer
        tr()
        &::before
            width 36px
            height 36px
            background: url("data:image/svg+xml,%3Csvg width='24' height='24' viewBox='0 0 24 24' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11.9978 1.95319C9.2364 1.95319 6.9978 4.19179 6.9978 6.95319C6.9978 9.71459 9.2364 11.9532 11.9978 11.9532C14.7592 11.9532 16.9978 9.71459 16.9978 6.95319C16.9978 4.19179 14.7592 1.95319 11.9978 1.95319ZM8.4666 13.2657C5.8523 13.9802 3.9978 16.2534 3.9978 18.9532V20.9532C3.9978 21.5055 4.4455 21.9532 4.9978 21.9532H18.9978C19.5501 21.9532 19.9978 21.5055 19.9978 20.9532V18.9532C19.9978 16.2534 18.1433 13.9802 15.529 13.2657C15.3049 13.2044 15.0847 13.2327 14.8728 13.3282C13.9573 13.7408 12.9827 13.9532 11.9978 13.9532C11.0129 13.9532 10.0383 13.7408 9.1228 13.3282C8.9109 13.2327 8.6907 13.2044 8.4666 13.2657Z' fill='white'/%3E%3C/svg%3E%0A"), $accent-mustard;
            background-size 24px 24px
            margin-right 16px
            border-radius: 50%
        &::after
            width 24px
            height 24px
            background-image: url("data:image/svg+xml,%3Csvg width='24' height='24' viewBox='0 0 24 24' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11.6676 16C11.4922 16.001 11.3184 15.9674 11.156 15.9011C10.9937 15.8348 10.846 15.7371 10.7215 15.6136L5.39185 10.2839C5.26762 10.1597 5.16907 10.0122 5.10184 9.84985C5.03461 9.68754 5 9.51356 5 9.33787C5 9.16218 5.03461 8.98821 5.10184 8.82589C5.16907 8.66357 5.26762 8.51609 5.39185 8.39185C5.51609 8.26762 5.66357 8.16907 5.82589 8.10184C5.98821 8.0346 6.16218 8 6.33787 8C6.51357 8 6.68754 8.0346 6.84986 8.10184C7.01217 8.16907 7.15966 8.26762 7.28389 8.39185L11.6676 12.8022L16.0645 8.56507C16.1871 8.42878 16.3365 8.31924 16.5033 8.24331C16.6702 8.16738 16.8509 8.12669 17.0342 8.12379C17.2174 8.12088 17.3993 8.15583 17.5685 8.22643C17.7377 8.29704 17.8904 8.40179 18.0173 8.53413C18.1441 8.66647 18.2422 8.82356 18.3056 8.99557C18.3689 9.16758 18.3961 9.35081 18.3854 9.53379C18.3747 9.71678 18.3264 9.8956 18.2434 10.0591C18.1605 10.2225 18.0447 10.3671 17.9033 10.4838L12.5736 15.6269C12.3299 15.8618 12.006 15.9952 11.6676 16Z' fill='%23364670'/%3E%3C/svg%3E%0A");
            background-size contain
            margin-left 31px
            tr()
        &::before,
        &::after
            content ''
            display: inline-block
            background-repeat no-repeat
            background-position center
        &:hover
            background-color rgba(255, 255, 255, .9)
        &.active::after
            transform: rotate(180deg)
    &__options
        z-index 1
        position absolute
        width 100%
        top 100% + 16px
        right 0
        font-size: var(--text-14)
        font-weight 400
        background-color $white
        padding 16px
        border-radius 16px
        visibility: hidden
        transform translateY(-350%)
        tr()
        &.active
            visibility: visible
            transform translateY(0)
    &__option:not(:last-child)
        margin-bottom 8px
    &__link
        tr()
        &:hover
            opacity .9

// Search
.search
    padding 88px 0
    &__title
        font-size: var(--h1);
        font-weight 500
        line-height: 130%
        margin 0
        margin-bottom 28px
    &__tablist
        display: flex
        color $accent-red
        font-size: var(--text-16);
        font-weight: 500;
        line-height: 121%;
        letter-spacing: 0.2px;
        margin-bottom 17px
    &__tabitem
        padding 10px
        border-radius 14px
        tr()
        cursor pointer
        &:not(:last-child)
            margin-right 15px
        &.active
            color $white
            background-color $accent-red
            cursor auto
    &__results
        display flex
        flex-wrap wrap
        gap 20px
    &__item
        width calc((100% - 60px) / 4)
    &-item__link
        tr()
        &:hover
            opacity .9
    &-item__img
        border-radius: 10px
        margin-bottom 21px
    &-item__title
        font-size: var(--h2);
        font-weight: 500;
        line-height: 150%;
        letter-spacing: 0.02em;
        margin 0
    &__error
        display none
        font-size var(--text-16)
        color $accent-red
        text-align: center
        margin 0

.form
    display: flex
    width 100%
    margin-bottom 16px
    &__input
        width 100%
        color $text-color
        font-size: var(--text-18);
        font-weight: 700;
        line-height: 121%;
        letter-spacing: 0.1px;
        padding 24px 20px
        border 1.5px solid $accent-mustard
        border-radius 14px
        margin-right 24px
        outline: none
        tr()
        &::placeholder
            color $gray
            font-weight: 500;
        &:hover
            background-color rgba(255, 255, 255, .9)
    &__btn
        color $white
        font-size: var(--h3);
        font-weight: 500;
        line-height: 121%;
        background-color $accent-red
        padding 23px 63.5px
        border-radius 14px
        tr()
        cursor pointer
        &:hover
            background-color rgba(145, 16, 22, .9)
.tabcontent
    margin-bottom 115px
    &__list
        display: none  
        flex-wrap: wrap;
        gap 16px
        font-size: var(--text-18);
        font-weight: 500;
        line-height: 150%;
        letter-spacing: 0.02em;
        &.active
            display: flex 
    &__item 
        background-color $bg-color-light
        padding 4.5px 12px
        border-radius: 50px
        tr()
        cursor pointer
        &:hover
            opacity .9

// Footer
.footer
    font-size: var(--text-14);
    font-weight: 400;
    line-height: 130%
    padding 27px 0
    &__container
        display: flex
        justify-content: space-between
        align-items: center
    &__copy
        color $accent-mustard-dark
        margin 0
    &__link
        color $accent-red
        tr()
        &:hover
            color rgba(145, 16, 22, .9)
        &:not(:last-child)
            margin-right 20px



                
@import './media.styl'