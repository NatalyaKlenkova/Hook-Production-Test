@media (max-width 1280px)
    :root
        --p: 40px
        --h1: 62px
        --h2: 23px
        --h3: 20px
        --text-18: 18px
        --text-16: 16px
        --text-14: 14px

@media (max-width 980px)
    :root
        --h1: 49px
        --h2: 18px
        --h3: 16px
        --text-18: 14px
        --text-16: 13px
        --text-14: 11px

    .search
        &__item
            width calc((100% - 20px) / 2)

@media (max-width 768px)
    :root
        --p: 4.2667vw
        --h1: 7.4419vw
        --h2: 3.5860vw
        --h3: 3.1209vw
        --text-18: 3.2558vw
        --text-16: 3.0233vw
        --text-14: 2.5581vw

    // Header
    .header
        padding 5.5814vw 0
        &__logo
            max-width 47.9767vw
        &__login
            padding 1.8605vw 2.5581vw
            border-radius: 2.5581vw
            &:before
                width 5.8140vw
                height 5.8140vw
                background-size 3.9535vw 3.9535vw
                margin-right 2.5581vw
            &::after
                width 3.9535vw
                height 3.9535vw
                margin-left 5.1163vw
        &__options
            padding 2.7907vw 2.3256vw
            border-radius 2.5581vw
        &__option:not(:last-child)
            margin-bottom 1.3953vw

    // Search
    .search
        padding 14.4186vw 0
        &__title
            margin-bottom 4.6512vw
        &__tablist
            margin-bottom 2.7907vw
        &__tabitem
            padding 1.8605vw
            border-radius 2.3256vw
            &:not(:last-child)
                margin-right 2.5581vw
        &__results
            gap 5.5814vw
        &__item
            width calc((100% - 3.2558vw) / 2)
        &-item__img
            border-radius: 1.8605vw
            margin-bottom 3.2558vw

    .form
        flex-direction: column;
        gap 3.7209vw
        margin-bottom 2.5581vw
        &__input
            padding 3.9535vw 3.2558vw
            border-radius 2.3256vw
            margin-right 3.9535vw
        &__btn
            width fit-content
            padding 3.9535vw 10.2326vw
            border-radius 2.3256vw
    .tabcontent
        margin-bottom 18.6047vw
        &__list
            gap 2.3256vw
        &__item 
            padding 0.9302vw 2.3256vw

    // Footer
    .footer
        padding 4.4186vw 0
        &__container
            flex-direction: column
            gap 3.7209vw
        &__link
            &:not(:last-child)
                margin-right 3.2558vw


@media (max-width 576px)
    .search
        &__item
            width 100%